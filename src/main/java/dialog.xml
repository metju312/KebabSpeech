    <form id="RodzajDaniaForm">
        <field name="rodzajDania">
            <prompt>Co chcesz zamówić?</prompt>
            <grammar root = "myrule">
                <rule id="myrule">
                    <one-of>
                        <item>Kebab</item>
                        <item>Danie obiadowe</item>
                        <item>Napój</item>
                    </one-of>
                </rule>
            </grammar>
            <noinput>
                Nie słyszę nic. Możesz powtórzyć?
                <reprompt/>
            </noinput>
            <nomatch>
                Nie rozpoznano. Możesz powtórzyć?
                <reprompt/>
            </nomatch>
            <filled namelist="rodzajDania">
                <if cond="rodzajDania == 'Kebab'">
                    <goto next="#KebabForm"/>
                    <elseif cond="rodzajDania == 'Danie obiadowe'" />
                    <goto next="#DanieObiadoweForm"/>
                    <elseif cond="rodzajDania == 'Napój'" />
                    <goto next="#NapojForm"/>
                    <else/>
                    <prompt>
                        A match has occurred, but no specific if statement
                        was written for it.
                        <reprompt/>
                    </prompt>
                </if>
            </filled>
        </field>
    </form>

